[
  {
    "bindings": {
      "ctrl-h": "project_panel::ToggleFocus",
      "alt-j": "terminal_panel::ToggleFocus",
      "alt-k": "terminal_panel::ToggleFocus",
      "ctrl-l": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "(Editor && vim_mode == normal && !VimWaiting && !menu) || ProjectPanel",
    "bindings": {
      "space f f": "file_finder::Toggle",
      "space f w": "workspace::NewSearch"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-h": "pane::ActivatePrevItem",
      "alt-l": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {}
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "K": "editor::Hover",
      "space V": "editor::SelectAll",
      "space x": "pane::CloseActiveItem",
      "space X": "pane::CloseInactiveItems",
      "space f m": "editor::Format",
      "g r": "editor::FindAllReferences",
      "g d": "editor::GoToDefinition"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "K": "editor::MoveLineUp",
      "J": "editor::MoveLineDown"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {}
  }
]
